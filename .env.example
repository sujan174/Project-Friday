# =============================================================================
# Orchestration System Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# API Keys
GOOGLE_API_KEY=your_gemini_api_key_here

# Notion Integration Token (Required for Notion agent)
# To get your token:
# 1. Go to https://www.notion.so/profile/integrations
# 2. Click "New Integration" and create an internal integration
# 3. Give it a name (e.g., "Chatbot Integration") and select capabilities
# 4. Copy the "Internal Integration Token" (starts with "secret_")
# 5. Share your Notion pages/databases with this integration
NOTION_TOKEN=your_notion_integration_token_here

# =============================================================================
# Confirmation Settings
# =============================================================================
# Control which operations require user confirmation before execution

# Slack message confirmation (default: true)
# When enabled, all Slack send/post operations will show preview and allow editing
CONFIRM_SLACK_MESSAGES=true

# Jira operation confirmation (default: true)
# When enabled, all Jira create/update/delete operations will show preview and allow editing
CONFIRM_JIRA_OPERATIONS=true

# Delete operation confirmation (default: true)
# When enabled, all destructive operations (delete, remove, archive) require confirmation
CONFIRM_DELETES=true

# Bulk operation confirmation (default: true)
# When enabled, operations affecting multiple items require confirmation
CONFIRM_BULK_OPERATIONS=true

# Public post confirmation (default: true)
# When enabled, posts to @channel, @here, or everyone require confirmation
CONFIRM_PUBLIC_POSTS=true

# =============================================================================
# Agent Operation Settings
# =============================================================================

# Agent operation timeout in seconds (default: 120)
AGENT_TIMEOUT=120.0

# Enrichment timeout in seconds (default: 5)
ENRICHMENT_TIMEOUT=5.0

# LLM operation timeout in seconds (default: 30)
LLM_TIMEOUT=30.0

# =============================================================================
# Batch Processing Settings
# =============================================================================

# Batch timeout in milliseconds (default: 1000)
BATCH_TIMEOUT_MS=1000

# Maximum actions per batch (default: 10)
MAX_BATCH_SIZE=10

# Maximum pending actions in queue (default: 100)
MAX_PENDING_ACTIONS=100

# =============================================================================
# Retry Configuration
# =============================================================================

# Maximum retry attempts for failed operations (default: 3)
MAX_RETRIES=3

# Retry backoff multiplier (default: 2.0)
RETRY_BACKOFF=2.0

# Initial retry delay in seconds (default: 1.0)
INITIAL_RETRY_DELAY=1.0

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Log directory path (default: logs)
LOG_DIR=logs

# Enable file logging (default: true)
ENABLE_FILE_LOGGING=true

# Enable JSON logging for machine parsing (default: true)
ENABLE_JSON_LOGGING=true

# Enable console logging (default: true)
ENABLE_CONSOLE_LOGGING=true

# Enable colored console logs (default: true)
ENABLE_COLORED_LOGS=true

# Maximum log file size in MB (default: 10)
MAX_LOG_FILE_SIZE_MB=10

# Number of log backup files to keep (default: 5)
LOG_BACKUP_COUNT=5

# Verbose mode for detailed debugging (default: false)
VERBOSE=false

# Per-module log levels (override LOG_LEVEL for specific modules)
# LOG_LEVEL_ORCHESTRATOR=DEBUG
# LOG_LEVEL_SLACK=INFO
# LOG_LEVEL_JIRA=INFO
# LOG_LEVEL_GITHUB=INFO
# LOG_LEVEL_NOTION=INFO
# LOG_LEVEL_ERROR_HANDLER=WARNING
# LOG_LEVEL_INTELLIGENCE=INFO

# =============================================================================
# Security Settings
# =============================================================================

# Enable input sanitization (default: true)
ENABLE_SANITIZATION=true

# Maximum instruction length (default: 10000)
MAX_INSTRUCTION_LENGTH=10000

# Maximum parameter value length (default: 5000)
MAX_PARAM_LENGTH=5000

# Maximum regex pattern length (default: 1000)
MAX_REGEX_LENGTH=1000

# =============================================================================
# Enrichment Settings
# =============================================================================

# Require enrichment for high-risk operations (default: true)
REQUIRE_ENRICHMENT_HIGH_RISK=true

# Fail open on enrichment error - proceed if enrichment fails (default: false)
FAIL_OPEN_ENRICHMENT=false
